{
  "name": "quick-llm-copy",
  "displayName": "Quick LLM Copy",
  "description": "Copy code files with path information for LLM conversations",
  "version": "0.0.2",
  "publisher": "batyan-soft",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Batyan45/QuickLLMCopy.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "quick-llm-copy.copyFiles",
        "title": "Quick LLM Copy"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "quick-llm-copy.copyFiles",
          "when": "resourceLangId",
          "group": "2_workspace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build-vsix": "npm run package && vsce package",
    "version": "npm version --no-git-tag-version"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.11.7",
    "@types/mocha": "^9.0.0",
    "@types/glob": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "esbuild": "^0.24.0",
    "typescript": "^4.8.4",
    "mocha": "^9.1.3",
    "@vscode/test-electron": "^2.3.8",
    "glob": "^7.2.0"
  }
}
